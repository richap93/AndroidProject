<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="5dip" 
    android:orientation="horizontal" >

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >
        
        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/contact_photo" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/list_item_text_contact"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="20dip"
        android:layout_marginLeft="75dip"
        android:layout_centerVertical="true"
        android:paddingBottom ="15dip"
        android:textColor="#040404"
        android:textStyle="bold"
        android:typeface="sans" />  
        
   <TextView
        android:id="@+id/list_item_text_number"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="14dip" 
        android:layout_below="@+id/list_item_text_contact"
        android:layout_alignLeft="@+id/list_item_text_contact"
        android:paddingBottom="5dip"
        android:layout_centerHorizontal="true"
        android:textColor="#343434" />
    
</RelativeLayout>

